{# This partial template renders a table of all customers, to be populated with rows via an AJAX request.
 # This extends a generic template for paginated tables.
 #
 # Note that this template contains a "skeleton" table with an empty table body, and then a block of Handlebars templates which are used
 # to render the table cells with the data from the AJAX request.
#}

{% extends "tables/table-paginated.html.twig" %}

{% block table %}
    <table id="{{table.id}}" class="tablesorter table table-bordered table-hover table-striped" data-sortlist="[[0, 1]]">
        <thead>
            <tr>
				<th class="sorter-metatext" data-column-name="title" data-column-template="#question-table-column-title" data-priority="1">{{translate("TITLE")}} <i class="fa fa-sort"></i></th>
				<th class="sorter-metatext" data-column-name="sub_title" data-column-template="#question-table-column-sub_title" data-priority="1">{{translate("SUB_TITLE")}} <i class="fa fa-sort"></i></th>
				<th class="sorter-metatext" data-column-name="type" data-column-template="#question-table-column-type" data-priority="1">{{translate("TYPE")}} <i class="fa fa-sort"></i></th>
				<th class="sorter-metatext" data-column-name="axis_count" data-column-template="#question-table-column-axis_count" data-priority="1">{{translate("AXIS_COUNT")}} <i class="fa fa-sort"></i></th>
				<th class="sorter-metatext" data-column-name="is_multiple_choice" data-column-template="#question-table-column-is_multiple_choice" data-priority="1">{{translate("IS_MULTIPLE_CHOICE")}} <i class="fa fa-sort"></i></th>
				<th class="sorter-metatext" data-column-name="info_url" data-column-template="#question-table-column-info_url" data-priority="1">{{translate("INFO_URL")}} <i class="fa fa-sort"></i></th>
				<th class="sorter-metatext" data-column-name="info_description" data-column-template="#question-table-column-info_description" data-priority="1">{{translate("INFO_DESCRIPTION")}} <i class="fa fa-sort"></i></th>
                <th class="sorter-metatext" data-column-name="answer_required" data-column-template="#question-table-column-answer_required" data-priority="1">{{translate("ANSWER_REQUIRED")}} <i class="fa fa-sort"></i></th>
				<th class="sorter-metatext" data-column-name="answers_selected_by_default" data-column-template="#question-table-column-answers_selected_by_default" data-priority="1">{{translate("ANSWERS_SELECTED_BY_DEFAULT")}} <i class="fa fa-sort"></i></th>
				<th class="sorter-metatext" data-column-name="step" data-column-template="#question-table-column-step" data-priority="1">{{translate("STEP")}} <i class="fa fa-sort"></i></th>
                {% if 'creator' in table.columns %}
                    <th class="sorter-metatext" data-column-name="creator" data-column-template="#question-table-column-creator" data-priority="1">{{translate('USER')}} <i class="fa fa-sort"></i></th>
                {% endif %}
				<th class="sorter-metanum" data-filter="false" data-column-name="created_at" data-column-template="#question-table-column-created-at" data-priority="1">{{translate('CREATED_AT')}} <i class="fa fa-sort"></i></th>
				<th data-column-name="actions" data-column-template="#question-table-column-actions" data-sorter="false" data-filter="false" data-priority="1">{{translate("ACTIONS")}}</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
{% endblock %}

{% block table_cell_templates %}
    {# This contains a series of <script> blocks, each of which is a client-side Handlebars template.
     # Note that these are NOT Twig templates, although the syntax is similar.  We wrap them in the `verbatim` tag,
     # so that Twig will output them directly into the DOM instead of trying to treat them like Twig templates.
     #
     # These templates require handlebars-helpers.js, moment.js
    #}
    {% verbatim %}
    <script id="question-table-column-title" type="text/x-handlebars-template">
        <td data-id="{{row.title.id}}">
				{{row.title.technical_name}}
        </td>
    </script>
	<script id="question-table-column-sub_title" type="text/x-handlebars-template">
        <td data-id="{{row.sub_title.id}}">
				{{row.sub_title.technical_name}}
        </td>
    </script>
	<script id="question-table-column-type" type="text/x-handlebars-template">
        <td data-id="{{row.id}}">
				{{row.type}}
        </td>
    </script>
    <script id="question-table-column-axis_count" type="text/x-handlebars-template">
        <td data-id="{{row.id}}">
				{{row.axis_count}}
        </td>
    </script>
	<script id="question-table-column-is_multiple_choice" type="text/x-handlebars-template">
        <td>
	        {{#if row.is_multiple_choice }}
				Yes
	        {{ else }}
	            No
	        {{/if }}
        </td>
    </script>
    <script id="question-table-column-info_url" type="text/x-handlebars-template">
        <td data-id="{{row.info_url.id}}">
				{{row.info_url.technical_name}}
        </td>
    </script>
	<script id="question-table-column-info_description" type="text/x-handlebars-template">
        <td data-id="{{row.info_description.id}}">
				{{row.info_description.technical_name}}
        </td>
    </script>
    <script id="question-table-column-answer_required" type="text/x-handlebars-template">
        <td>
	        {{#if row.answer_required }}
				Yes
	        {{ else }}
	            No
	        {{/if }}
        </td>
    </script>
    <script id="question-table-column-answers_selected_by_default" type="text/x-handlebars-template">
        <td>
	        {{#if row.answers_selected_by_default }}
				Yes
	        {{ else }}
	            No
	        {{/if }}
        </td>
    </script>
    <script id="question-table-column-step" type="text/x-handlebars-template">
        <td data-text="{{row.step.name.technical_name}}">
            {{#if row.step }}
                <strong>
                    {{row.step.name.technical_name}}
                </strong>
            {{ else }}
                <i>{% endverbatim %}{{translate("STEP.DELETED")}}{% verbatim %}</i>
            {{/if }}
        </td>
    </script>
	<script id="question-table-column-creator" type="text/x-handlebars-template">
        <td data-text="{{row.creator.last_name}}">
            {{#if row.creator }}
                <strong>
                    <a href="{{site.uri.public}}/users/u/{{row.creator.user_name}}">{{row.creator.first_name}} {{row.creator.last_name}} ({{row.creator.user_name}})</a>
                </strong>
                <div class="js-copy-container">
                    <span class="js-copy-target">{{row.creator.email}}</span>
                    <button class="btn btn-xs uf-copy-trigger js-copy-trigger"><i class="fa fa-copy"></i></button>
                </div>
            {{ else }}
                <i>{% endverbatim %}{{translate("USER.DELETED")}}{% verbatim %}</i>
            {{/if }}
        </td>
    </script>
	<script id="question-table-column-created-at" type="text/x-handlebars-template">
        {{#if row.created_at }}
        <td data-num="{{dateFormat row.created_at format='x'}}">
            {{dateFormat row.created_at format="dddd"}}<br>{{dateFormat row.created_at format="MMM Do, YYYY h:mm a"}}
        </td>
        {{ else }}
        <td data-num="0">
            <i>{% endverbatim %}{{translate("UNKNOWN")}}{% verbatim %}</i>
        </td>
        {{/if }}
    </script>
    <script id="question-table-column-actions" type="text/x-handlebars-template">
        <td class="uf-table-fit-width">
            <div class="btn-group">
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">{% endverbatim %}{{translate("ACTIONS")}}{% verbatim %}<span class="caret"></span></button>
                <ul class="dropdown-menu dropdown-menu-right-responsive" role="menu">
                    <li>
		<a href="#" class="js-displayForm-table" data-toggle="modal" data-formUrl="api/questions/{{row.id}}/edit"><i class="fa fa-edit"></i> {% endverbatim %}{{translate("QUESTION.EDIT")}}{% verbatim %}</a>
                    </li>
                    <li>
						<a href="#" class="js-displayConfirm-table" data-confirm-title="{% endverbatim %}{{translate("QUESTION.DELETE")}}{% verbatim %}" data-confirm-message="{% endverbatim %}{{translate("QUESTION.DELETE_CONFIRM")}}{% verbatim %}" data-confirm-button="{% endverbatim %}{{translate("QUESTION.DELETE_YES")}}{% verbatim %}" data-post-url="api/questions/{{row.id}}" data-post-method="DELETE" data-toggle="modal">
						<i class="fa fa-trash-alt"></i> {% endverbatim %}{{translate("QUESTION.DELETE")}}{% verbatim %}
						</a>
                    </li>
                </ul>
            </div>
        </td>			
    </script>
    {% endverbatim %}
{% endblock %}